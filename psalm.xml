<?xml version="1.0"?>
<psalm
        cacheDirectory=".psalm"
        errorLevel="8"
        resolveFromConfigFile="true"
        checkForThrowsDocblock="true"
        ensureArrayStringOffsetsExist="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="app"/>
        <directory name="bootstrap"/>
        <directory name="config"/>
        <directory name="database"/>
        <directory name="public"/>
        <directory name="routes"/>
        <ignoreFiles>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>
    <plugins>
        <pluginClass class="Psalm\LaravelPlugin\Plugin"/>
    </plugins>
    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="app/Nova/Metrics"/>
                <directory name="app/Http/Requests/"/>
                <directory name="app/Nova/Tools"/>
                <directory name="database/factories"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
        <MissingConstructor>
            <errorLevel type="suppress">
                <directory name="app/Testing"/>
            </errorLevel>
        </MissingConstructor>
        <MissingThrowsDocblock>
            <errorLevel type="suppress">
                <directory name="app/Testing"/>
            </errorLevel>
        </MissingThrowsDocblock>
        <UnresolvableInclude>
            <errorLevel type="suppress">
                <file name="app/Testing/ServiceContainer/LaravelBooter.php"/>
            </errorLevel>
        </UnresolvableInclude>
    </issueHandlers>
</psalm>
